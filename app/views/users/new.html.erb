<div class="title">ユーザ新規登録</div>
<div class="form-wrapper">
    <%= form_tag("/users/create") do %>
        <div class="form-container">
            <div class="center name-label">ユーザ名</div>
            <div class="center input-form"><input type="text" name="name"></div>
        </div>
        <div class="form-container">
            <div class="center mail-label">メールアドレス</div>
            <div class="center input-form"><input type="text" name="email"></div>
        </div>
        <div class="form-container">
            <div class="center password-label">パスワード</div>
            <div class="center input-form"><input type="password" name="password"></div>
        </div>
        <div class="form-container">
            <div class="center submit-btn">
                <button type="submit" class="btn btn-primary">
                    <span class="submit-label">登録</span>
                </button>
            </div>
        </div>
    <% end %>
</div>
