<div class="new-title">ユーザ新規登録</div>
<div class="new-form-wrapper">
    <%= form_tag("/users/create") do %>
        <div class="new-form-container">
            <div class="new-center new-name-label">ユーザ名</div>
            <div class="new-center new-input-form"><input type="text" name="name"></div>
        </div>
        <div class="new-form-container">
            <div class="new-center new-mail-label">メールアドレス</div>
            <div class="new-center new-input-form"><input type="text" name="email"></div>
        </div>
        <div class="new-form-container">
            <div class="new-center new-password-label">パスワード</div>
            <div class="new-center new-input-form"><input type="password" name="password"></div>
        </div>
        <div class="new-form-container">
            <div class="new-center new-btn-container">
                <button type="submit" class="btn btn-primary new-btn">
                    <span class="new-submit-label">登録</span>
                </button>
            </div>
        </div>
    <% end %>
</div>
