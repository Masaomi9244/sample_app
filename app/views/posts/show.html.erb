<h2><%= "投稿詳細画面" %></h2>
<div><%= @post.content %></div>
<div><%= @post.created_at %></div>
<% if @user != nil %>
  <div><%= link_to(@user.name, "/users/#{@user.id}/show") %></div>
<% else %>
  <div>この投稿のユーザは削除されました。</div>
<% end %>
<% if @post.user_id == @current_user.id %>
  <div><%= link_to("編集", "/posts/#{@post.id}/edit") %></div>
  <div><%= link_to("削除", "/posts/#{@post.id}/destroy", {method: "post"}) %></div>
<% end %>
